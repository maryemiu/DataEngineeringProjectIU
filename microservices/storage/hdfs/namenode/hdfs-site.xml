<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<!--
  HDFS Site Configuration – Storage Microservice
  Reliability: replication factor = 3 (no SPOF for data blocks).
  Scalability: tuned for parallel reads and block management.
-->
<configuration>
    <!-- Reliability: triple replication (block-level redundancy) -->
    <property>
        <name>dfs.replication</name>
        <value>3</value>
    </property>

    <!-- Scalability: 128 MB block size (default) -->
    <property>
        <name>dfs.blocksize</name>
        <value>134217728</value>
    </property>

    <!-- Reliability: NameNode data directory -->
    <property>
        <name>dfs.namenode.name.dir</name>
        <value>file:///hadoop/dfs/name</value>
    </property>

    <!-- Reliability: DataNode data directory -->
    <property>
        <name>dfs.datanode.data.dir</name>
        <value>file:///hadoop/dfs/data</value>
    </property>

    <!-- Governance: permissions enabled (zone-level RBAC) -->
    <property>
        <name>dfs.permissions.enabled</name>
        <value>true</value>
    </property>

    <!-- Security: superuser group -->
    <property>
        <name>dfs.permissions.superusergroup</name>
        <value>hadoop</value>
    </property>

    <!-- Reliability: heartbeat interval (DataNode → NameNode) -->
    <property>
        <name>dfs.heartbeat.interval</name>
        <value>3</value>
    </property>

    <!-- Reliability: heartbeat recheck interval (ms) -->
    <property>
        <name>dfs.namenode.heartbeat.recheck-interval</name>
        <value>300000</value>
    </property>

    <!-- Reliability: block report interval (6 hours) -->
    <property>
        <name>dfs.blockreport.intervalMsec</name>
        <value>21600000</value>
    </property>

    <!-- Reliability: safe mode threshold (99.9% of blocks) -->
    <property>
        <name>dfs.namenode.safemode.threshold-pct</name>
        <value>0.999</value>
    </property>

    <!-- Scalability: DataNode max transfer threads -->
    <property>
        <name>dfs.datanode.max.transfer.threads</name>
        <value>4096</value>
    </property>

    <!-- Scalability: short-circuit local reads (bypass TCP) -->
    <property>
        <name>dfs.client.read.shortcircuit</name>
        <value>false</value>
        <!-- Set to true in prod when domain socket path is configured -->
    </property>

    <!-- NameNode Web UI address -->
    <property>
        <name>dfs.namenode.http-address</name>
        <value>namenode:9870</value>
    </property>

    <!-- Disable hostname check for local Docker networking -->
    <property>
        <name>dfs.namenode.datanode.registration.ip-hostname-check</name>
        <value>false</value>
    </property>
</configuration>
